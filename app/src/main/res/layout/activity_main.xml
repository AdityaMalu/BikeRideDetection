<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    android:fitsSystemWindows="true">

    <!-- Material3 TopAppBar -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        app:elevation="0dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:title="@string/app_name_display"
            app:titleTextColor="?attr/colorOnPrimary"
            app:menu="@menu/menu_main"
            app:navigationIconTint="?attr/colorOnPrimary" />

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- App Tagline -->
            <TextView
                android:id="@+id/subtitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/app_tagline"
                android:textAppearance="@style/TextAppearance.BikeRide.BodyMedium"
                android:gravity="center"
                android:paddingTop="8dp"
                android:paddingBottom="24dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Hero Card - Main Toggle with Glassmorphism -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/heroCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_glass_hero_card_stateful"
                android:foreground="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="24dp"
                app:cardElevation="8dp"
                app:strokeWidth="0dp"
                app:layout_constraintTop_toBottomOf="@id/subtitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="24dp">

                    <!-- Bike Icon -->
                    <ImageView
                        android:id="@+id/bikeIcon"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/ic_bike"
                        android:contentDescription="@string/cd_bike_icon"
                        app:tint="?attr/colorPrimary"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <!-- Bike Mode Title -->
                    <TextView
                        android:id="@+id/bikeModeTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="@string/title_bike_mode"
                        android:textAppearance="@style/TextAppearance.BikeRide.TitleLarge"
                        app:layout_constraintTop_toBottomOf="@id/bikeIcon"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <!-- Material Switch -->
                    <com.google.android.material.materialswitch.MaterialSwitch
                        android:id="@+id/switchBikeMode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:minHeight="48dp"
                        android:contentDescription="@string/cd_bike_mode_switch"
                        app:layout_constraintTop_toBottomOf="@id/bikeModeTitle"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <!-- Status Badge -->
                    <TextView
                        android:id="@+id/statusText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="@string/status_off"
                        android:textAppearance="@style/TextAppearance.BikeRide.StatusInactive"
                        android:background="@drawable/bg_status_inactive"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="8dp"
                        app:layout_constraintTop_toBottomOf="@id/switchBikeMode"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Features Section Title -->
            <TextView
                android:id="@+id/featuresTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="@string/features_title"
                android:textAppearance="@style/TextAppearance.BikeRide.TitleMedium"
                app:layout_constraintTop_toBottomOf="@id/heroCard"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Feature Cards Row -->
            <LinearLayout
                android:id="@+id/featureCardsContainer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:weightSum="2"
                app:layout_constraintTop_toBottomOf="@id/featuresTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <!-- Call Blocking Card with Glassmorphism -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardCallBlocking"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    app:cardBackgroundColor="@color/glass_feature_calls_background"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="6dp"
                    app:strokeColor="@color/glass_border_light"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_phone_blocked"
                            android:contentDescription="@string/cd_call_blocking"
                            app:tint="?attr/colorTertiary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="@string/feature_call_blocking"
                            android:textAppearance="@style/TextAppearance.BikeRide.LabelLarge"
                            android:gravity="center" />

                        <TextView
                            android:id="@+id/callBlockingStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="@string/feature_status_ready"
                            android:textAppearance="@style/TextAppearance.BikeRide.BodyMedium" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Auto Reply Card with Glassmorphism -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardAutoReply"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    app:cardBackgroundColor="@color/glass_feature_sms_background"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="6dp"
                    app:strokeColor="@color/glass_border_light"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_sms_auto"
                            android:contentDescription="@string/cd_auto_reply"
                            app:tint="?attr/colorSecondary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="@string/feature_auto_reply"
                            android:textAppearance="@style/TextAppearance.BikeRide.LabelLarge"
                            android:gravity="center" />

                        <TextView
                            android:id="@+id/autoReplyStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="@string/feature_status_ready"
                            android:textAppearance="@style/TextAppearance.BikeRide.BodyMedium" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <!-- Safety Info Card with Glassmorphism -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/safetyCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="16dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="@color/glass_safety_background"
                app:cardCornerRadius="20dp"
                app:cardElevation="6dp"
                app:strokeColor="@color/glass_border_accent"
                app:strokeWidth="1.5dp"
                app:layout_constraintTop_toBottomOf="@id/featureCardsContainer"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_shield_check"
                        android:contentDescription="@string/cd_safety_shield"
                        app:tint="?attr/colorOnPrimaryContainer" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/safety_tip_title"
                            android:textAppearance="@style/TextAppearance.BikeRide.TitleMedium"
                            android:textColor="?attr/colorOnPrimaryContainer" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="@string/safety_tip_message"
                            android:textAppearance="@style/TextAppearance.BikeRide.BodyMedium"
                            android:textColor="?attr/colorOnPrimaryContainer" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>


