<?xml version="1.0" encoding="utf-8"?>
<!-- Stateful glassmorphism background for hero card with smooth transitions -->
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    android:enterFadeDuration="300"
    android:exitFadeDuration="300">
    
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <layer-list>
            <item
                android:left="0dp"
                android:top="1dp"
                android:right="0dp"
                android:bottom="0dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/glass_shadow_light" />
                    <corners android:radius="24dp" />
                </shape>
            </item>
            <item
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="1dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/glass_hero_background" />
                    <stroke
                        android:width="1.5dp"
                        android:color="@color/glass_border_accent" />
                    <corners android:radius="24dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    
    <!-- Focused state -->
    <item android:state_focused="true">
        <layer-list>
            <item
                android:left="0dp"
                android:top="2dp"
                android:right="0dp"
                android:bottom="0dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/glass_shadow_light" />
                    <corners android:radius="24dp" />
                </shape>
            </item>
            <item
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="2dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/glass_hero_background" />
                    <stroke
                        android:width="1.5dp"
                        android:color="@color/glass_border_accent" />
                    <corners android:radius="24dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    
    <!-- Default state -->
    <item>
        <layer-list>
            <item
                android:left="0dp"
                android:top="2dp"
                android:right="0dp"
                android:bottom="0dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/glass_shadow_light" />
                    <corners android:radius="24dp" />
                </shape>
            </item>
            <item
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="2dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/glass_hero_background" />
                    <stroke
                        android:width="1dp"
                        android:color="@color/glass_border_light" />
                    <corners android:radius="24dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    
</selector>

