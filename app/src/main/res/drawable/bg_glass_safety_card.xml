<?xml version="1.0" encoding="utf-8"?>
<!-- Glassmorphism background for safety info card -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Soft shadow layer for depth -->
    <item
        android:left="0dp"
        android:top="1dp"
        android:right="0dp"
        android:bottom="0dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/glass_shadow_light" />
            <corners android:radius="20dp" />
        </shape>
    </item>
    
    <!-- Main glassmorphism card -->
    <item
        android:left="0dp"
        android:top="0dp"
        android:right="0dp"
        android:bottom="1dp">
        <shape android:shape="rectangle">
            <!-- Semi-transparent green background -->
            <solid android:color="@color/glass_safety_background" />
            
            <!-- Accent border with green tint -->
            <stroke
                android:width="1.5dp"
                android:color="@color/glass_border_accent" />
            
            <!-- Smooth corner radius -->
            <corners android:radius="20dp" />
        </shape>
    </item>
    
</layer-list>

