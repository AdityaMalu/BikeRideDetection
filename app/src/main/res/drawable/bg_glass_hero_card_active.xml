<?xml version="1.0" encoding="utf-8"?>
<!-- Glassmorphism background for hero card - Active state -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Enhanced shadow layer for active state -->
    <item
        android:left="0dp"
        android:top="3dp"
        android:right="0dp"
        android:bottom="0dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/glass_shadow_light" />
            <corners android:radius="24dp" />
        </shape>
    </item>
    
    <!-- Main glassmorphism card with accent border -->
    <item
        android:left="0dp"
        android:top="0dp"
        android:right="0dp"
        android:bottom="3dp">
        <shape android:shape="rectangle">
            <!-- Semi-transparent background -->
            <solid android:color="@color/glass_hero_background" />
            
            <!-- Accent border for active state -->
            <stroke
                android:width="2dp"
                android:color="@color/glass_border_accent" />
            
            <!-- Smooth corner radius -->
            <corners android:radius="24dp" />
        </shape>
    </item>
    
</layer-list>

